{
  "manifest_version": 2,

  "name": "BitBucket to IDE",
  "description": "Add link to open reviewed file in your IDE",
  "version": "0.1",
  "icons": { "128": "icon_128.png" },

  "browser_action": {
    "default_title": "BitBucket to IDE",
    "default_icon": "icon_19.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://stash.srv.czech/*", "http://stash.srv.czech/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "http://stash.srv.czech/*",
    "https://stash.srv.czech/*"
  ]
}
